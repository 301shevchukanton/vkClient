<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vkclient.activities.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svProfile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llInfo"
                android:id="@+id/llButtonsPanel">

                <Button
                    style="@style/CentralGravityButtonStyle"
                    android:text="@string/send_message"
                    android:id="@+id/btSendMessage" />

                <Button
                    style="@style/CentralGravityButtonStyle"
                    android:text="@string/wall_post"
                    android:id="@+id/btWallPost" />

                <Button
                    style="@style/CentralGravityButtonStyle"
                    android:text="@string/view_friends"
                    android:id="@+id/btProfileFriends"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

            <LinearLayout
                style="@style/ZeroPaddingLayoutStyle"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/llInfo">

                <ImageView
                    android:layout_width="@dimen/profile_photo_width"
                    android:layout_height="@dimen/profile_photo_height"
                    android:id="@+id/ivProfilePhoto"
                    android:src="@drawable/ic_user100" />

                <LinearLayout
                    android:orientation="vertical"
                    style="@style/ZeroPaddingLayoutStyle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/tvProfileName"
                        android:layout_gravity="center_horizontal"
                        android:focusableInTouchMode="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/tvProfileStatus"
                        android:layout_gravity="center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        style="@style/ZeroPaddingLayoutStyle"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/llBirthDate">

                        <TextView
                            style="@style/SmallLabel"
                            android:text="@string/birthday_profile_label" />

                        <TextView
                            style="@style/SmallLabel"
                            android:text="Small Text"
                            android:id="@+id/tvProfileBirthDate" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        style="@style/ZeroPaddingLayoutStyle"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/llHomeTown">

                        <TextView
                            style="@style/SmallLabel"
                            android:text="@string/hometown_profile_label"/>

                        <TextView
                            style="@style/SmallLabel"
                            android:text="Small Text"
                            android:id="@+id/tvProfileTown" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        style="@style/ZeroPaddingLayoutStyle"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/llRelationships">

                        <TextView
                            style="@style/SmallLabel"
                            android:text="@string/relationship_status_label" />

                        <TextView
                            style="@style/SmallLabel"
                            android:text="Small Text"
                            android:id="@+id/tvRelationship" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        style="@style/ZeroPaddingLayoutStyle"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/llStudiedAt">

                        <TextView
                            style="@style/SmallLabel"
                            android:text="@string/studied_at_profile_label" />

                        <TextView
                            style="@style/SmallLabel"
                            android:text="Small Text"
                            android:id="@+id/tvStudiedAt" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        style="@style/ZeroPaddingLayoutStyle"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/llLanguages">

                        <TextView
                            style="@style/SmallLabel"
                            android:text="@string/languages_profile_label" />

                        <TextView
                            style="@style/SmallLabel"
                            android:text="Small Text"
                            android:id="@+id/tvLanguages" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>

</android.support.v4.widget.DrawerLayout>
