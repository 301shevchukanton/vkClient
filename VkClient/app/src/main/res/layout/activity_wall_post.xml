<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/MainLayoutStyle"
        tools:context="com.vkclient.activities.WallPostActivity">

        <LinearLayout
            android:orientation="horizontal"
            style="@style/ZeroPaddingLayoutStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:id="@+id/llSendMessageInfo">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="140dp"
                android:id="@+id/ivPostPhoto"
                android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
                android:layout_weight="0.11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvPostName"
                android:focusableInTouchMode="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llSendMessageInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/post"
                android:layout_alignTop="@+id/llTextMessage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message_send"
                    android:id="@+id/btWallPost" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibAddPhoto"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_camera40" />
            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

    <ListView android:id="@+id/left_drawer"
        style="@style/DrawerStyle"/>

        </android.support.v4.widget.DrawerLayout>