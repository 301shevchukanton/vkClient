<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TwoLinesItemStyle">
    <TextView
        style="@style/ZeroPaddingLayoutStyle"
        android:textAppearance="?attr/textAppearanceListItem"
        android:id="@+id/tvSingleDialogName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content" />

    <TextView
       style="@style/ZeroPaddingLayoutStyle"
        android:textAppearance="?attr/textAppearanceListItem"
        android:id="@+id/tvSingleDialogDate"
        android:layout_alignBaseline="@+id/tvSingleDialogName"
        android:layout_alignBottom="@+id/tvSingleDialogText"
        android:layout_toRightOf="@+id/tvSingleDialogName"
        android:layout_toLeftOf="@+id/tvSingleDialogPhoto"
        android:layout_toStartOf="@+id/tvSingleDialogPhoto"
        android:paddingLeft="15dp" />

    <TextView
        style="@style/ZeroPaddingLayoutStyle"
        android:id="@+id/tvSingleDialogText"
        android:layout_toLeftOf="@+id/tvSingleDialogPhoto"
        android:layout_toStartOf="@+id/tvSingleDialogPhoto"
        android:layout_below="@+id/tvSingleDialogName"
        android:minLines="2" />

    <ImageView
        style="@style/PhotoPreview"
        android:id="@+id/tvSingleDialogPhoto"
        android:layout_alignTop="@+id/tvSingleDialogName" />

    <com.vkclient.views.External.HorizontalListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:widget="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lvMessagesPhoto"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:divider="#878787"
        widget:dividerWidth="2dp"
        android:visibility="visible"
        android:layout_below="@+id/tvSingleDialogText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</TwoLineListItem>