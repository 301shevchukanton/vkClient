<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    style="@style/DrawerLayoutStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:showDividers="middle">

        <FrameLayout
            android:id="@+id/fragmentContainer"
            style="@style/ZeroPaddingLayoutStyle"
            android:layout_width="@dimen/zero_width_panel"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/vk_share_gray_line"
            android:padding="@dimen/news_buttons_padding_top" />

        <FrameLayout
            android:id="@+id/detailFragmentContainer"
            style="@style/ZeroPaddingLayoutStyle"
            android:layout_width="@dimen/zero_width_panel"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="@dimen/news_buttons_padding_top">

        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/navigationPanelContainer"
        style="@style/DrawerStyle" />

</android.support.v4.widget.DrawerLayout>