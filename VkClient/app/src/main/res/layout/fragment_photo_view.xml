<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vkclient.supports.TouchImageView
        style="@style/LargeImageViewStyle"
        android:id="@+id/ivPhoto"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        style="@style/ImageButtonStyle"
        android:id="@+id/ibSharePhoto"
        android:src="@drawable/ic_share_20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ivPhoto"
        android:layout_alignEnd="@+id/ivPhoto" />

    <ImageButton
        style="@style/ImageButtonStyle"
        android:id="@+id/ibLikePhoto"
        android:src="@drawable/ic_like_20dp"
        android:layout_alignTop="@+id/ibSharePhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>