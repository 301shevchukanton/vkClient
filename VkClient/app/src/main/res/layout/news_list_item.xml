<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/TwoLinesItemStyle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:id="@+id/tvPostSource"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ivPostSourcePhoto"
        android:layout_toStartOf="@+id/ivPostSourcePhoto" />

    <TextView
        style="@style/DateTextStyle"
        android:id="@+id/tvPostDate"
        android:layout_below="@+id/tvPostSource"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/vk_share_dialog_padding_top" />

    <TextView
        style="@style/BodyTextStyle"
        android:id="@+id/tvPostText"
        android:layout_toStartOf="@+id/ivPostSourcePhoto"
        android:layout_below="@+id/ivPostSourcePhoto"
        android:layout_alignRight="@+id/ivPostSourcePhoto"
        android:layout_alignEnd="@+id/ivPostSourcePhoto"
        android:elegantTextHeight="false"
        android:phoneNumber="false" />

    <ImageView
        style="@style/PhotoPreview"
        android:id="@+id/ivPostSourcePhoto"
        android:layout_alignTop="@+id/tvDialogName"
        android:src="@drawable/ic_user75" />

    <com.vkclient.views.External.HorizontalListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:widget="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lvNewsPhoto"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:divider="#878787"
        widget:dividerWidth="2dp"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvPostText" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibLikePost"
        android:src="@drawable/ic_like_20dp"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:layout_alignTop="@+id/ibSharePost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvLikesCount"
        android:paddingBottom="0dp"
        android:paddingTop="7dp"
        android:text="12"
        android:layout_alignBottom="@+id/ibLikePost"
        android:layout_toRightOf="@+id/ibLikePost"
        android:layout_toEndOf="@+id/ibLikePost" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibSharePost"
        android:src="@drawable/ic_share_20dp"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:layout_below="@+id/lvNewsPhoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvSharesCount"
        android:text="123"
        android:layout_alignBottom="@+id/tvLikesCount"
        android:layout_toLeftOf="@+id/ibSharePost"
        android:layout_toStartOf="@+id/ibSharePost" />
</TwoLineListItem>