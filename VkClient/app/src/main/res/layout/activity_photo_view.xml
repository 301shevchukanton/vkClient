<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    style="@style/DrawerLayoutStyle">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/MainLayoutStyle"
        tools:context="com.vkclient.activities.PhotoViewActivity">

        <ImageView
          style="@style/LargeImageViewStyle"
            android:id="@+id/ivPhoto"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true" />

        <ImageButton
            style="@style/ImageButtonStyle"
            android:id="@+id/ibSharePhoto"
            android:src="@drawable/ic_share_20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/ivPhoto"
            android:layout_alignEnd="@+id/ivPhoto" />

        <ImageButton
            style="@style/ImageButtonStyle"
            android:id="@+id/ibLikePhoto"
            android:src="@drawable/ic_like_20dp"
            android:layout_alignTop="@+id/ibSharePhoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ListView android:id="@+id/left_drawer"
        style="@style/DrawerStyle"/>

</android.support.v4.widget.DrawerLayout>