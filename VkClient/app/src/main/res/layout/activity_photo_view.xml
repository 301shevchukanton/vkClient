<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/MainLayoutStyle"
        tools:context="com.vkclient.activities.PhotoViewActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/ivPhoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:layout_above="@+id/ibSharePhoto" />

        <ImageButton
            style="@style/ImageButtonStyle"
            android:id="@+id/ibSharePhoto"
            android:src="@drawable/ic_share"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/ivPhoto"
            android:layout_alignEnd="@+id/ivPhoto" />

        <ImageButton
            style="@style/ImageButtonStyle"
            android:id="@+id/ibLikePhoto"
            android:src="@drawable/ic_like"
            android:layout_alignTop="@+id/ibSharePhoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ListView android:id="@+id/left_drawer"
        style="@style/DrawerStyle"/>

</android.support.v4.widget.DrawerLayout>