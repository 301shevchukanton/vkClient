<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TwoLinesItemStyle"
    android:padding="@dimen/abc_control_padding_material">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:id="@+id/tvDialogName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/ZeroPaddingLayoutStyle"
        android:textAppearance="?attr/textAppearanceListItem"
        android:id="@+id/tvDialogDate"
        android:layout_below="@+id/tvDialogName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ivDialogPhoto"
        android:layout_toStartOf="@+id/ivDialogPhoto"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <TextView
        style="@style/BodyTextStyle"
        android:id="@+id/tvDialogText"
        android:maxHeight="150dp"
        android:layout_below="@+id/tvDialogDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ivDialogPhoto"
        android:layout_toStartOf="@+id/ivDialogPhoto" />

    <ImageView
        style="@style/PhotoPreview"
        android:id="@+id/ivDialogPhoto"
        android:layout_alignTop="@+id/tvDialogName"
        android:src="@drawable/ic_user75" />

</TwoLineListItem>